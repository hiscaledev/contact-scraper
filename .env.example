# ============================================
# Contact Scraper API - Environment Configuration
# ============================================

# --------------------------------------------
# API Security
# --------------------------------------------
# Comma-separated list of API keys for authentication
# Leave empty to disable authentication (NOT recommended for production)
# Example: API_KEYS=key1,key2,key3
API_KEYS=your_secret_api_key_1,your_secret_api_key_2

# --------------------------------------------
# OpenAI Configuration
# --------------------------------------------
# OpenAI API key for AI-powered contact validation
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI model to use for validation
# Options: gpt-4.1-mini, gpt-4, gpt-3.5-turbo
# Default: gpt-4.1-mini (recommended for cost/performance balance)
OPENAI_MODEL=gpt-4.1-mini

# --------------------------------------------
# Redis Configuration
# --------------------------------------------
# Redis server host (Use 'redis' if using Docker Compose, 'localhost' for local development)
REDIS_HOST=redis

# Redis server port (default: 6379)
REDIS_PORT=6379

# Redis database number (0-15)
REDIS_DB=0

# Redis password (leave empty if no password is set)
REDIS_PASSWORD=

# --------------------------------------------
# Supabase Configuration
# --------------------------------------------
# Supabase project URL
# Found in: Project Settings → API → Project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase service role key (KEEP SECRET!)
# Found in: Project Settings → API → service_role key
# NOTE: Use service_role key, NOT the anon/public key
SUPABASE_KEY=your_supabase_service_role_key_here

# Supabase Storage bucket name
# Must be created in Supabase Dashboard → Storage
# Default: contact-scraper
SUPABASE_BUCKET=contact-scraper

# --------------------------------------------
# Application Settings
# --------------------------------------------
# Debug mode (enables detailed logging and error column in CSV output)
# Set to True for development, False for production
DEBUG=False

# Maximum concurrent jobs (default: 2)
# Higher values may increase resource usage
MAX_WORKERS=2

# Cache TTL in seconds (default: 86400 = 24 hours)
# How long to cache scraped contact information
CACHE_TTL=86400
